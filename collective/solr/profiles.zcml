<configure
    xmlns="http://namespaces.zope.org/zope"
    xmlns:genericsetup="http://namespaces.zope.org/genericsetup"
    i18n_domain="collective.solr">

  <genericsetup:registerProfile
      name="default"
      title="collective.solr"
      directory="profiles/default"
      description="Solr integration for Plone"
      for="Products.CMFPlone.interfaces.IPloneSiteRoot"
      provides="Products.GenericSetup.interfaces.EXTENSION"
      />

  <genericsetup:registerProfile
      name="search"
      title="collective.solr (site search)"
      directory="profiles/search"
      description="Solr integration for Plone's site search"
      for="Products.CMFPlone.interfaces.IPloneSiteRoot"
      provides="Products.GenericSetup.interfaces.EXTENSION"
      />

  <genericsetup:registerProfile
      name="facets"
      title="collective.solr (facetted search)"
      directory="profiles/facets"
      description="Integration for Solr's facetted search"
      for="Products.CMFPlone.interfaces.IPloneSiteRoot"
      provides="Products.GenericSetup.interfaces.EXTENSION"
      />

</configure>
